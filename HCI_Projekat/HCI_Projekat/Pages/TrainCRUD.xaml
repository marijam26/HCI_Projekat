<Page x:Class="HCI_Projekat.Pages.TrainCRUD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Projekat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1200" Background="Wheat"
      Title="TrainCRUD">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:ManagerNavbar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="3"></local:ManagerNavbar>

        <Border Grid.Row="2" Background="DarkCyan" Grid.ColumnSpan="4" Grid.RowSpan="4"></Border>

        <Label Grid.Row="2" HorizontalAlignment="Right" Foreground="White" Grid.Column="3">You got this!</Label>


        <DataGrid x:Name="train_table" Grid.Row="1" ItemsSource="{Binding dataBase.trains}" Grid.ColumnSpan="2" IsReadOnly="True" ColumnWidth="*" FontSize="18" Margin="25" Background="Wheat" Height="250" BorderBrush="Wheat" BorderThickness="0" IsSynchronizedWithCurrentItem="True" SelectionChanged="train_table_SelectionChanged">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="DarkCyan"/>
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" DataContext="{Binding ElementName=train_table,Path=SelectedItem}">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.Row="1" FontSize="18" VerticalAlignment="Top" FontFamily="Century Gothic" HorizontalAlignment="Right" Margin="0,0,10,0">Name:</Label>
            <TextBox Grid.Column="1" Grid.Row="1" Width="220" FontSize="20" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" Text="{Binding Path=name}"></TextBox>

            <Label Grid.Column="0" Grid.Row="2" FontSize="18" VerticalAlignment="Top" FontFamily="Century Gothic" HorizontalAlignment="Right" Margin="0,0,10,0">Capacity:</Label>
            <TextBox Grid.Column="1" Grid.Row="2" Width="70" FontSize="20" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" Text="{Binding Path=capacity}"></TextBox>

            <Label Grid.Column="0" Grid.Row="3" FontSize="18" VerticalAlignment="Top" FontFamily="Century Gothic" HorizontalAlignment="Right" Margin="0,0,10,0">Rang:</Label>

            <Viewbox Height="40" Grid.Row="3" Grid.Column="1" VerticalAlignment="Top">
                <RadioButton x:Name="rb_soko" Content="Soko" Margin="0,5,0,7"  GroupName="rang" ></RadioButton>
            </Viewbox>

            <Viewbox Height="40" Grid.Row="3" Grid.Column="2" VerticalAlignment="Top">
                <RadioButton x:Name="rb_obican" Grid.Column="1" Content="Obican"  Margin="0,5,70,5"  GroupName="rang" ></RadioButton>
            </Viewbox>

            <Button x:Name="btn_save" Grid.Row="4" Grid.Column="2" Margin="15" Width="120" Height="40" FontSize="20" Background="DarkCyan" Foreground="White" Content="Save" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"></Setter>
                    </Style>
                </Button.Resources>
            </Button>


        </Grid>
        
        
    </Grid>
</Page>
